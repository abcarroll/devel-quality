{
    "name": "ab/devel-quality",
    "license": "MIT",
    "homepage": "https://ab.hl9.net/projects/devel-quality",
    "keywords": [
        "develop", "analyze", "quickstart", "phploc", "phpstan", "psalm", "cs-checker", "cs-fixer", "phpcs", "ab"
    ],
    "type": "metapackage",
    "readme": "README.md",
    "support": {
        "email": "devel-quality@ab.hl9.net",
        "issues": "https://ab.hl9.net/projects/devel-quality/issues",
        "docs": "https://ab.hl9.net/projects/devel-quality/docs",
        "irc": "irc://chat.freenode.net/#ab-pkgs"
    },

    "require": {
        "phploc/phploc": "^5.0",
        "roave/backward-compatibility-check": "^4.1",
        "jakub-onderka/php-parallel-lint": "^1.0",

        "phpbench/phpbench": "^0.16.10",

        "phpunit/phpunit": "^8.4",
        "mockery/mockery": "^1.2",

        "phpstan/phpstan":                   "^0.11.19",
        "thecodingmachine/phpstan-strict-rules": "^0.11.2",
        "phpstan/phpstan-strict-rules":      "^0.11.1",
        "phpstan/phpstan-webmozart-assert":  "^0.11.3",
        "phpstan/phpstan-deprecation-rules": "^0.11.2",
        "phpstan/phpstan-phpunit":           "^0.11.2",
        "phpstan/phpstan-doctrine":          "^0.11.6",
        "ekino/phpstan-banned-code": "^0.2.0",
        "localheinz/phpstan-rules": "^0.13.0",

        "vimeo/psalm": "^3.6",
        "psalm/plugin-phpunit": "^0.7.0",
        "weirdan/doctrine-psalm-plugin": "^0.8.0",

        "friendsofphp/php-cs-fixer": "^2.16",
        "php-cs-fixer/phpunit-constraint-isidenticalstring": "^1.1",
        "php-cs-fixer/phpunit-constraint-xmlmatchesxsd":     "^1.1",

        "squizlabs/php_codesniffer": "^3.5",

        "sebastian/phpcpd": "^4.1",
        "sebastian/phpdcd": "^1.0",
        "phpmd/phpmd": "^2.7",
        "povils/phpmnd": "^2.1",

        "webmozart/assert": "^1.5",

        "pds/skeleton": "^1.0"
    },

    "minimum-stability": "dev",
    "prefer-stable": true,

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
